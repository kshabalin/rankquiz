<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <%= render "devise/shared/links" %>

  <p class="mt-5 mb-3 text-muted">Â© 2020</p>
<% end %>


